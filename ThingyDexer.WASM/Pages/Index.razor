@page "/"

<PageTitle>ThingyDexer</PageTitle>
<Switch @bind-Value=ShowWelcome Label="Show welcome"></Switch>
@if ((string.IsNullOrEmpty(Welcome) == false))
{
    if (ShowWelcome)
    {
        @((MarkupString)Welcome)
    }
}

<hr />
<Switch @bind-Value=ShowReleaseNotes Label="Show release notes"></Switch>

@if (string.IsNullOrEmpty(ReleaseNotes) == false)
{
    if (ShowReleaseNotes)
    {
        @((MarkupString)ReleaseNotes)
    }

}

