@if (Parent.ActiveStep == this)
{
    <div id="step-@(Parent.StepsIndex(this) + 1)">
        <div class="row">
            @if (!string.IsNullOrEmpty(Title))
            {
                <h4>@Title</h4>
            }
            else
            {
                <br />
            }
        </div>
        <hr />
        <div class="row px-4 py-4">
            <div class="col-sm">
                @ChildContent
            </div>
        </div>
        <hr />
        @if (Footer != null)
        {
            @Footer
        }
        else
        {
            <div class="row">
                <div class="col-sm-10"></div>
                <div class="col-sm-2">
                    <span>@(Parent.StepsIndex(this) + 1) </span>
                    <text>/</text>
                    <span>@(Parent.Steps.Count())</span>
                </div>
            </div>
        }
    </div>
}