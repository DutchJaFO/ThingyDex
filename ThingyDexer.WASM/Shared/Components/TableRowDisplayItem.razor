@inherits ComponentBase

@using ThingyDexer.Model.Table

<span>
    @if (@Noun != null)
    {
        if (SelectedRegel?.Equals(Noun) == true)
        {
            <Button Disabled="@(SelectedRegel == null)" Size="Size.Medium"
            Color="ButtonColor.Secondary"
            @onclick="@(() => DoRerollSelectedRegel())">
                <Icon Name="IconName.Dice2Fill" />
            </Button>
        }
        <Button Type="ButtonType.Link"
            Color="@(SelectedRegel?.Equals(Noun)==true? ButtonColor.Link:ButtonColor.None)"
            Active=@(SelectedRegel?.Equals(Noun) == true)
            Outline=false
            @onclick="@(() => DoSelectNoun())">
            <h4>
                @Noun?.Value
            </h4>
        </Button>
    }
    else
    {
        <Button Type="ButtonType.Button"
            Color="ButtonColor.Secondary"
            Outline=true
            @onclick="@(() => DoRollSelectedRegel())">
            <Icon Name="IconName.PlusCircle"></Icon>
        </Button>
    }

</span>

