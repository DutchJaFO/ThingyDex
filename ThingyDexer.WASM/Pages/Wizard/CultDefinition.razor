@using ThingyDexer.Model.Cult

<EditForm Model="ViewModel">
    <DataAnnotationsValidator></DataAnnotationsValidator>
    <ValidationSummary></ValidationSummary>
    <div class="row">
        <div class="col-sm-2 py-1 px-1">
            <label for="edtCultName">Cult name</label>
        </div>
        <div class="col-sm-10 py-1 px-1">
            <InputText class="w-100" id="edtCultName" @bind-Value="@ViewModel.CultName"></InputText>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 py-1 px-1">
            <label for="edtDeity">Deity</label>
        </div>
        <div class="col-sm-10 py-1 px-1">
            <InputText class="w-100" id="edtDeity" @bind-Value="@ViewModel.Deity"></InputText>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 py-1 px-1">
            <label for="edtDescription">Description</label>
        </div>
        <div class="col-sm-10 py-1 px-1">
            <InputTextArea class="w-100" id="edtDescription" @bind-Value="@ViewModel.Description"></InputTextArea>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 py-1 px-1">
            <label>Primary focus</label>
        </div>
        <div class="col-sm-10 py-1 px-1">
            <InputRadioGroup @bind-Value="ViewModel.PrimaryFocus">
                @{
                    var x = EnumExtensions.GetEnumList<StatBlockType>();
                    foreach (StatBlockType stat in x)
                    {
                        <div class="row">
                            <div class="col py-1 px-1">
                                <InputRadio id="@($"edtTemplate1{stat}")" Value="@stat" />
                                <label class="px-2" for="@($"edtTemplate1{stat}")">
                                    @(stat.ToString())
                                </label>
                            </div>
                        </div>
                    }
                }
            </InputRadioGroup>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 py-1 px-1">
            <label for="edtStartingFavour">Starting Favour</label>
        </div>
        <div class="col-sm-10 py-1 px-1">
            <NumberInput TValue="int?" AllowNegativeNumbers=false EnableMinMax=true Min=0 Max=1000 Class="w-50" id="edtStartingFavour" @bind-Value="@ViewModel.StartingFavour"></NumberInput>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 py-1 px-1">
            <label for="edtInitialPower">Initial power</label>
        </div>
        <div class="col-sm-10 py-1 px-1">
            <NumberInput TValue="int" AllowNegativeNumbers=false Class="w-50" id="edtInitialPower" @bind-Value="@ViewModel.InitialPower"></NumberInput>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 py-1 px-1">
            Rituals
        </div>
        <div class="col-sm-10 py-1 px-1">
        </div>
    </div>
</EditForm>
